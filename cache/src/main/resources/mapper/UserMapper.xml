<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xtransformers.dao.UserMapper">

    <!-- 开启 MyBatis cache -->
    <!-- 实体对象必须实现 Serializable 接口，否则报错 java.io.NotSerializableException: com.xtransformers.entity.User -->
    <cache type="org.mybatis.caches.ehcache.LoggingEhcache">
        <property name="memoryStoreEvictionPolicy" value="LRU"/>
    </cache>

    <resultMap id="userResultMap" type="com.xtransformers.entity.User">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="age" jdbcType="INTEGER" property="age"/>
    </resultMap>

    <select id="find" resultMap="userResultMap">
        select id, name, age
        from user
        where id = #{id}
    </select>

    <select id="list" resultMap="userResultMap">
        select id, name, age
        from user
    </select>

</mapper>